setup
		cp config-amd64 .config
	or
		cp config-686-pae .config
	or
		cp config-486 .config

configure
		make menuconfig

build
		make -j3 deb-pkg LOCALVERSION=-amd64 KDEB_PKGVERSION=3.16
	or
		make -j3 deb-pkg LOCALVERSION=-686-pae KDEB_PKGVERSION=3.16
	or
		make -j3 deb-pkg LOCALVERSION=-686-pae KDEB_PKGVERSION=3.16
